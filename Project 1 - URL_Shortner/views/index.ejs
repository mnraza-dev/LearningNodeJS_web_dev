        .pageTitle {
            text-align: center;
            margin-top: 14rem;
            color: blueviolet;
            font-size: 4rem;
        }

        .urlTextbox {
            width: 50%;
            margin: 0 auto;
            border-radius: 99px;
            display: block;
            height: 4rem;
            outline: none;
            padding: 16px;
            font-size: 24px;
            margin-top: 2rem;
        }

        .submitBtn {
            width: 20%;
            height: 60px;
            margin: 0 auto;
            border-radius: 99px;
            display: flex;
            align-items: center;
            outline: none;
            border: none;
            padding: 16px;
            font-size: 20px;
            background-color: blueviolet;
            color: white;
            cursor: pointer;
            margin-top: 2rem;
        }

        .submitBtn:hover {
            background-color: rgb(109, 21, 193);
        }
    </style>
</head>

<body class="container">
    <h1 class="pageTitle">URL Shortner App</h1>
    <form action="/shorten" method="POST">
        <input class="urlTextbox" type="text" name="longUrl" id="">
        <input class="submitBtn" type="submit" name="shortenBtn" id="" value="Shorten">
    </form>
    <% if (shortUrl) { %>
        <p>Shortened URL: <a href="<%= shortUrl %>" target="_blank">
                <%= shortUrl %>
            </a></p>
        <% } %>

</body>

